@model IEnumerable<BancoStandard.Front.Models.ContractModel>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Contracts List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ContractCreate" class="btn btn-outline-primaty">
                <button type="button" class="btn btn-primary btn-lg">Create New Contract</button>
            </a>
        </div>
    </div>
    <table class="table">
        <tdead>
            <tr>
                <td>
                    Nome
                </td>
                <td>
                    Valor Empréstimo
                </td>
                <td>
                    Valor Dívida
                </td>
                <td>
                    Lucro
                </td>
                <td>
                    Porcentagem
                </td>
                <td>
                    Tipo de Pagamento
                </td>
                <td>
                    Data do Empréstimo
                </td>
                <td>
                    Data do Pagamento
                </td>
                <td>
                    Data da Pagamento
                </td>
                <td>
                    Observação
                </td>
            </tr>
        </tdead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Cliente
                    </td>
                    <td>
                        @((item.ValorEmp).ToString("c"))
                    </td>
                    <td>
                        @((item.ValorDiv).ToString("c"))
                    </td>
                    <td>
                        @((item.ValorLucro).ToString("c"))
                    </td>
                    <td>
                        @string.Format($"{item.Porcentagem} %")
                    </td>
                    <td>
                        @item.TipoPagamento
                    </td>
                    <td>
                        @item.DataEmp
                    </td>
                    <td>
                        @item.DataAcordo
                    </td>
                    <td>
                        @item.DataFinal
                    </td>
                    <td>
                        @item.Observacao
                    </td>
                    <td>
                        <a asp-action="ContractUpdate" class=" btn btn-primary" asp-route-id="@item.Id">
                            Editar
                        </a>
                        <a asp-action="ContractDelete" class=" btn btn-danger" asp-route-id="@item.Id">
                            Deletar
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>