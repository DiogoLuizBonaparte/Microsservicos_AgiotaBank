@model IEnumerable<BancoStandard.Front.Models.ContractModel>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Client List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ContractClient" class="btn btn-outline-primaty">
                <button type="button" class="btn btn-primary btn-lg">Create New Client</button>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Valor Empréstimo
                </th>
                <th>
                    Valor Dívida
                </th>
                <th>
                    Lucro
                </th>
                <th>
                    Porcentagem
                </th>
                <th>
                    Tipo de Pagamento
                </th>
                <th>
                    Data do Empréstimo
                </th>
                <th>
                    Data acordada
                </th>
                <th>
                    Data da Pagamento
                </th>
                <th>
                    Observação
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.Cliente
                    </th>
                    <th>
                        @item.ValorEmp
                    </th>
                    <th>
                        @item.ValorDiv
                    </th>
                    <th>
                        @item.ValorLucro
                    </th>
                    <th>
                        @item.Porcentagem
                    </th>
                    <th>
                        @item.DataEmp
                    </th>
                    <th>
                        @item.DataAcordo
                    </th>
                    <th>
                        @item.DataFinal
                    </th>
                    <th>
                        @item.Observacao
                    </th>
                    <th>
                        <a asp-action="ContractUpdate" class=" btn btn-primary" asp-route-id="@item.Id">
                            Editar
                        </a>
                        <a asp-action="ContractDelete" class=" btn btn-danger" asp-route-id="@item.Id">
                            Deletar
                        </a>
                    </th>
                </tr>
            }

        </tbody>
    </table>

</div>