@model IEnumerable<BancoStandard.Front.Models.ClientModel>

<br/>
<br/>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Client List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ClientCreate" class="btn btn-outline-primaty">
               <i class="fas fa-plus"></i> Create new client
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Profissão
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item  in Model)
            {
                <tr>
                    <th>
                        @item.Name
                    </th>
                    <th>
                        @item.Profissao
                    </th>
                </tr>
            }

        </tbody>
    </table>

</div>