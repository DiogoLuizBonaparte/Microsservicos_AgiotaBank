@model IEnumerable<BancoStandard.Front.Models.ClientModel>

<br/>
<br/>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Client List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ClientCreate" class="btn btn-outline-primaty">
                <button type="button" class="btn btn-primary btn-lg">Create New Client</button>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Profissão
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item  in Model)
            {
                <tr>
                    <th>
                        @item.Name
                    </th>
                    <th>
                        @item.Profissao
                    </th>
                    <th>
                       <a asp-action="ClientUpdate" class=" btn btn-primary" asp-route-id="@item.Id">
                           Editar                           
                       </a>
                        <a asp-action="ClientDelete" class=" btn btn-danger" asp-route-id="@item.Id">
                            Deletar
                        </a>
                    </th>
                </tr>
            }

        </tbody>
    </table>

</div>